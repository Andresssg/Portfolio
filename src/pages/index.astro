---
import SectionWrapper from "../components/SectionWrapper.astro";
import Layout from "../layouts/Layout.astro";
import About from "../sections/About.astro";
import Background from "../sections/Background.astro";
import Header from "../sections/Header.astro";
import Projects from "../sections/Projects.astro";
---

<Layout title="Portafolio Andres Guevara">
	<Header />
	<SectionWrapper
		id="background"
		class="flex flex-col justify-center items-center mx-auto gap-y-10 md:max-w-3xl lg:max-w-4xl px-8 scroll-m-20"
		sectionTitle="Experiencia"
	>
		<Background />
	</SectionWrapper>
	<SectionWrapper
		id="projects"
		class="flex flex-col justify-center items-center mx-auto gap-y-10 md:max-w-3xl lg:max-w-4xl px-8 scroll-m-20"
		sectionTitle="Proyectos"
	>
		<Projects />
	</SectionWrapper>
	<SectionWrapper
		id="about"
		class="flex flex-col justify-center items-center mx-auto gap-y-10 md:max-w-3xl lg:max-w-4xl px-8 scroll-m-20"
		sectionTitle="Sobre mi"
	>
		<About />
	</SectionWrapper>
</Layout>
