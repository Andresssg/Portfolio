---
interface Props {
  title: string;
  company: string;
  initialDate: string;
  finalDate: string | undefined;
  description: string;
}

const { title, company, initialDate, finalDate, description } = Astro.props;
const displayFinalDate = finalDate ?? "Actualidad";
---

<div
  class="grid gap-y-7 border-l-2 border-white/50 px-8 py-4 relative
md:flex-row md:gap-y-0 md:grid-cols-5"
>
  <span class="size-4 bg-secondary absolute -left-[9px] top-[22px] rounded-full"
  ></span>
  <header class="tracking-tight w-full md:col-span-2">
    <h3 class="font-bold text-xl text-secondary">{title}</h3>
    <h4 class="font-semibold text-xl text-gray-200">{company}</h4>
    <div class="text-sm text-white/50 font-semibold">
      <span>{initialDate}</span>
      <span>Â·</span>
      <span>{displayFinalDate}</span>
    </div>
  </header>
  <article class="text-gray-200 md:col-span-3">
    <p>{description}</p>
  </article>
</div>
